version: "3.1"

rules:
  - rule: Say goodbye anytime the user says goodbye
    steps:
      - intent: goodbye
      - action: utter_goodbye

  - rule: Say 'I am a bot' anytime the user challenges
    steps:
      - intent: bot_challenge
      - action: utter_iamabot

  - rule: Show all pets when asked
    steps:
      - intent: show_pets
      - action: action_show_pets

  - rule: Show details of a pet when asked
    steps:
      - intent: show_pet_details
      - action: action_show_pet_details
      
  - rule: Dodavanje ljubimca u korpu
    steps:
      - intent: add_to_cart
      - action: action_add_to_cart




